#!/bin/sh -ex
IFS=
REPO=github.com/elves/elvish

: ${PUBLISH_DIR:=/data/html}
: ${BIN_DIR:=/data/bin}

export GOPATH=/home/travis/gopath
export GOROOT=/home/travis/goroot

export PATH=$GOPATH/bin:$PATH

go get -u $REPO
make -C $GOPATH/src/$REPO/website PUBLISH_DIR=$PUBLISH_DIR/ genblog publish
make -C $GOPATH/src/$REPO BIN_DIR=$BIN_DIR VERSION=HEAD buildall

`dirname $0`/update-index
